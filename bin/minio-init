#!/usr/bin/env bash

# This script will run at project bootstrap to initialize a minio instance
set -eo pipefail

mc alias set qualicharge http://minio:9000 qualicharge password

# Create buckets if they don't exist
for bucket in qualicharge-indicators qualicharge-sessions qualicharge-statuses; do
    if ! mc ls qualicharge/$bucket &>/dev/null; then
        mc mb qualicharge/$bucket
        mc version enable qualicharge/$bucket
    fi
done

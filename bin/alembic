#!/usr/bin/env bash

set -eo pipefail

declare DOCKER_USER
DOCKER_UID="$(id -u)"
DOCKER_GID="$(id -g)"
DOCKER_USER="${DOCKER_UID}:${DOCKER_GID}"

DOCKER_USER=${DOCKER_USER} \
  DOCKER_UID=${DOCKER_UID} \
  DOCKER_GID=${DOCKER_GID} \
  docker compose run --rm -v "./src/api:/app" api \
    uv run \
    alembic -c qualicharge/alembic.ini "$@"

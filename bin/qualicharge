#!/usr/bin/env bash

set -eo pipefail

declare DOCKER_USER
DOCKER_UID="$(id -u)"
DOCKER_GID="$(id -g)"
DOCKER_USER="${DOCKER_UID}:${DOCKER_GID}"

DOCKER_USER=${DOCKER_USER} \
  DOCKER_UID=${DOCKER_UID} \
  DOCKER_GID=${DOCKER_GID} \
  docker compose exec \
    -e QUALICHARGE_DEBUG=0 \
    api \
    pipenv run python -m qualicharge "$@"

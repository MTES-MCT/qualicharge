#!/usr/bin/env bash

set -eo pipefail

declare DOCKER_USER
DOCKER_UID=1000
DOCKER_GID=1000
DOCKER_USER="${DOCKER_UID}:${DOCKER_GID}"

DOCKER_USER=${DOCKER_USER} \
  DOCKER_UID=${DOCKER_UID} \
  DOCKER_GID=${DOCKER_GID} \
  docker compose run -it \
    dashboard \
    pipenv run python manage.py "$@"
